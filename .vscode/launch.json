{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Benchmarks",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": ["run"],
      "cwd": "${workspaceFolder}/src/Benchmarks",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "${env:CODESPACES}"
      }
    },
    {
      "name": "Debug Benchmarks in Chrome",
      "type": "chrome",
      "request": "launch",
      "timeout": 30000,
      "url": "https://localhost:50001",
      "webRoot": "${workspaceFolder}/src/Benchmarks",
      "inspectUri": "{wsProtocol}://{url.hostname}:{url.port}/_framework/debug/ws-proxy?browser={browserInspectUri}"
    },
    {
      "name": "Run tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test"
      ],
      "cwd": "${workspaceFolder}/tests/Benchmarks.Tests",
      "console": "internalConsole",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
